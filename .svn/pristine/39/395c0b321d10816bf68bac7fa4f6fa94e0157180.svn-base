        SERVER_URL = CommonParams.SERVER_LOCALHOST_URL;
        SERVER_SOCKET_PORT = CommonParams.SOCKET_LOCALHOST_PORT;
        SERVER_SOCKET_VIDEO_PORT = CommonParams.SOCKET_VIDEO_LOCALHOST_PORT;
